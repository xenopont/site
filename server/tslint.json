{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": false,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "max-line-length": [true, 128],
        "one-line": [false, "check-catch", "check-finally", "check-else"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never",
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}
